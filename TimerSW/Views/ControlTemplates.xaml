<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TimerSW">

    <ControlTemplate x:Key="ControlTemplateTimerFace">
        <StackPanel>
            <Viewbox Style="{DynamicResource StyleTimerFace}"  Margin="10 0">
                <TextBlock Grid.Column="1" Text="{Binding Path=TimeString}" HorizontalAlignment="Center" />
            </Viewbox>

            <Border Style="{DynamicResource StyleTimerIndicator}" />
        </StackPanel>
    </ControlTemplate>

    <ControlTemplate x:Key="ControlTemplateConfigureTimer">
        <Grid Margin="0" Style="{DynamicResource StyleConfigureGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0 5">
                <TextBlock Text="Type:" Margin="10 0" />
                <RadioButton Content="Stopwatch" Margin="0 0 10 0" Style="{DynamicResource StyleBaseTypeRadioButton}" IsChecked="{Binding Path=Type, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static local:TimerType.Up}}" />
                <RadioButton Content="Timer" Style="{DynamicResource StyleBaseTypeRadioButton}" IsChecked="{Binding Path=Type, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static local:TimerType.Down}}" />
            </StackPanel>

            <Grid Grid.Row="1" Margin="5" Style="{DynamicResource StyleTimeSelectorGrid}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0">
                    <TextBox Text="{Binding Path=StartingHours, Mode=TwoWay}" Margin="5 0" />
                    <TextBlock Text="Hours" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="1 0">
                    <TextBox Text="{Binding Path=StartingMinutes, Mode=TwoWay}" Margin="5 0" />
                    <TextBlock Text="Minutes" />
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0">
                    <TextBox Text="{Binding Path=StartingSeconds, Mode=TwoWay}" Margin="5 0" />
                    <TextBlock Text="Seconds" />
                </StackPanel>
            </Grid>

            <Button Grid.Column="2" Grid.Row="2" Content="Save" Style="{DynamicResource StyleSaveSettingsButton}"  Command="{Binding Path=SaveTimerSettingsCommand}" />
        </Grid>
    </ControlTemplate>

